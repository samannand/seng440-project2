<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.camera.SnapPreviewActivity">

    <ImageView
        android:id="@+id/snap_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/snap_preview_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/delete_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#0000"
        android:contentDescription="@string/save_button_content_description"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/send_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_delete_white_24dp" />

    <ImageButton
        android:id="@+id/send_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#0000"
        android:layout_marginBottom="100dp"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:contentDescription="@string/send_button_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:srcCompat="@drawable/ic_send_white_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>